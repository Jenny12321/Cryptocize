<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="app.cryptocize.com.cryptocize.fragments.SettingsFragment"
  android:background="@drawable/cryptosize_back">

  <!-- TODO: Update blank fragment layout -->
  <TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />
  <TextView
    android:id="@+id/set_goal_tv"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="115dp"
    android:layout_marginStart="21dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:text="Set Goal:"
    android:textColor="@android:color/black"
    android:textSize="18sp" />
  <EditText
    android:id="@+id/goal_et"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="35dp"
    android:layout_alignBottom="@+id/set_goal_tv"
    android:layout_toEndOf="@+id/set_amt_tv"
    android:ems="10"
    android:inputType="number"
    android:textColor="?android:attr/colorAccent" />
  <TextView
    android:id="@+id/set_amt_tv"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="62dp"
    android:layout_alignStart="@+id/set_goal_tv"
    android:layout_below="@+id/goal_et"
    android:text="Set Bitcoin Amount:"
    android:textColor="@android:color/black"
    android:textSize="18sp" />
  <EditText
    android:id="@+id/bit_amt_et"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/set_amt_tv"
    android:layout_alignEnd="@+id/goal_et"
    android:ems="10"
    android:inputType="numberDecimal"
    android:textColor="?android:attr/colorAccent" />
  <TextView
    android:id="@+id/amt_addition_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="45dp"
    android:layout_alignEnd="@+id/set_amt_tv"
    android:layout_below="@+id/set_amt_tv"
    android:text="(per day)"
    android:textColor="@android:color/black"
    android:textColorLink="?android:attr/textColorTertiary"
    android:textSize="18sp" />
  <Button
    android:id="@+id/submit_bt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="97dp"
    android:layout_below="@+id/amt_addition_tv"
    android:layout_centerHorizontal="true"
    android:background="@android:color/holo_green_light"
    android:backgroundTint="@android:color/holo_green_dark"
    android:text="submit" />

</RelativeLayout>
